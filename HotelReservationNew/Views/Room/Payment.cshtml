
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model HotelReservationNew.Models.ViewModels.HomeViewModel

<div class="container">
    <div class="htlfndr-steps">
        <ul class="htlfndr-progress">
            <li style="width: 33%;"><span class="htlfndr-step-number">1</span> <span class="htlfndr-step-description" style="display: inline-block;">ODALAR</span></li>
            <li style="width: 33%;"><span class="htlfndr-step-number">2</span> <span class="htlfndr-step-description" style="display: inline-block;">DETAY</span></li>
            <li class="htlfndr-active-step" style="width: 33%;"><span class="htlfndr-step-number">3</span> <span class="htlfndr-step-description" style="display: inline-block;">ÖDEME</span></li>
        </ul>
    </div>
    <div class="row htlfndr-payment-page">
        <main class="col-sm-12 col-md-8 col-lg-8" id="htlfndr-main-content" role="main">
            <form action="thanks-page.html" id="htlfndr-payment-form" method="post" name="htlfndr-payment-form">

                <section class="htlfndr-form-section">
                    <header>
                        <h2 class="htlfndr-form-section-title">Kişisel <span>bilgileriniz</span></h2>
                        <h5 class="htlfndr-form-section-description"><a data-target="#htlfndr-sing-in" data-toggle="modal" href="index.htm#"><span class="htlfndr-sing-in-link">Bilgileri güncelle</span></a> Kişisel bilgileriniz değiştirmek için tıklayınız.</h5>
                    </header>
                    <hr>
                    <div class="htlfndr-form-block">

                        @foreach (HotelReservationNew.Models.Data.User item in Model.Users)
                        {
                            <div class="htlfndr-form-block-inner">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-name">İsim</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-name" readonly type="text" value="@item.Name">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-middle-name">Soyisim</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-middle-name" readonly type="text" value="@item.Surname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-middle-name">Telefon</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-middle-name" readonly type="text" value="@item.PhoneNumber">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-middle-name">Adres</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-middle-name" readonly type="text" value="@item.Adres">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-middle-name">İl</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-middle-name" readonly type="text" value="@item.Country">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="htlfndr-required htlfndr-top-label" for="htlfndr-personal-middle-name">İlçe</label>
                                        <input class="htlfndr-input" id="htlfndr-personal-middle-name" readonly type="text" value="@item.Region">
                                    </div>
                                </div>
                            </div>
                        }



                    </div>
                </section>
