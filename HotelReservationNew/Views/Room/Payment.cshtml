                <section class="htlfndr-form-section htlfndr-form-review-section">
                    @foreach (HotelReservationNew.Models.Data.Room item in Model.Rooms)
                    {
                        <a href="@Url.Action("AddReservation","Room",new { @id=item.ID})" style="cursor:pointer"><input class="htlfndr-payment-submit" style="cursor:pointer" value="Tamamla"></a>
                    }

                </section>



            </form>
        </main>
        <aside class="col-sm-12 col-md-4 col-lg-offset-1 col-lg-3 htlfndr-sidebar htlfndr-sidebar-in-right" id="htlfndr-right-sidebar" role="complementary">
            @foreach (HotelReservationNew.Models.Data.Room item in Model.Rooms)
            {
                <div class="htlfndr-booking-details">
                    <div class="widget">
                        <div class="htlfndr-widget-main-content htlfndr-widget-padding">
                            <h3 class="widget-title">Oda Bilgileri</h3>
                            <div class="htlfndr-widget-block htlfndr-table-view">
                                <div class="htlfndr-hotel-thumbnail">
                                    <a href="@Url.Action("Detail","Room",new {@id=item.ID })"><img alt="Hotel picture" src="@item.CoverImage"></a>
                                </div>
                                <div class="htlfndr-hotel-info">
                                    <a href="hotel-page-v1.html">
                                        <h3>@item.Name</h3>
                                    </a>
                                    <div class="htlfndr-rating-stars">
                                        <i class="fa fa-star htlfndr-star-color"></i><i class="fa fa-star htlfndr-star-color"></i><i class="fa fa-star htlfndr-star-color"></i><i class="fa fa-star htlfndr-star-color"></i><i class="fa fa-star htlfndr-star-color"></i>
                                    </div>
                                    <p class="htlfndr-location">Hakan Hotel</p>
                                </div>
                            </div>

                            <p class="htlfndr-total-price">Oda Fiyatı:</p>
                            <div class="htlfndr-hotel-price">
                                <span class="htlfndr-cost"><i class="fa fa-try"></i> @item.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
            }




        </aside>

    </div>
</div>
