
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Yonetim/Views/Shared/_Yonetim.cshtml";
}

 @model HotelReservationNew.Areas.Yonetim.Models.ManagementView.ManageView


<div class="container-fluid">
    <!-- Begin page heading -->
    <h1 class="page-heading">Users <small>Displaying Users</small></h1>
    <!-- End page heading -->
    <!-- Begin breadcrumb -->
    <ol class="breadcrumb default square rsaquo sm">
        <li><a href="index.html"><i class="fa fa-home"></i></a></li>
        <li><a href="#fakelink">Users</a></li>
        <li class="active">Listing</li>
    </ol>
    <div class="the-box no-border">
        <h4 class="small-title">Reservations</h4>

        <div class="btn-toolbar top-table" role="toolbar">
            <div class="btn-group">
                <form role="form">
                    <select class="form-control">
                        <option>10</option>
                        <option>20</option>
                        <option>30</option>
                        <option>50</option>
                    </select>
                </form>
            </div>


            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-cog"></i>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#fakelink">Action</a></li>
                    <li><a href="#fakelink">Another action</a></li>
                    <li><a href="#fakelink">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#fakelink">Separated link</a></li>
                </ul>
            </div>

            <div class="btn-group pull-right">
                <form role="form">
                    <input type="text" class="form-control" placeholder="Search member...">
                </form>

            </div><!-- /.btn-group .pull-right -->
        </div><!-- /.btn-toolbar top-table -->

        <div class="table-responsive">
            <table class="table table-th-block table-hover" border="1">
                <thead>
                    <tr>
                        <th style="width: 30px;">ID</th> 
                        <th>İsim Soyisim</th>
                        <th>Telefon</th>
                        <th>Mail</th>
                        <th>Last Login</th>
                        <th>Add Date</th>
                        <th>Country</th>
                        <th>Region</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (HotelReservationNew.Models.Data.User item in Model.Users)
                    {
                        <tr>
                            <td>@item.ID</td> 
                            <td>@item.Name @item.Surname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Mail</td>
                            <td>@item.LastLogin</td>
                            <td>@item.AddDate</td>
                            <td>@item.Country</td>
                            <td>@item.Region</td>
                             
                            <td>
                                @if (item.IsDelete == false)
                                {
                                    <span class="label label-success">Active</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Deaktif</span>
                                }
                            </td>
                            <td>
                             
                                &nbsp;&nbsp;  <a href="/Yonetim/yUsers/DeleteUser/@item.ID"><i class="fa fa-ban"></i></a>&nbsp;&nbsp;
                                <a href="/Yonetim/yUsers/ActivateUser/@item.ID"><i class="fa fa-check"></i></a>

                            </td>
                        </tr>


                    }


                </tbody>
            </table>
        </div>

    </div>








</div>
